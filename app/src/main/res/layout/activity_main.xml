<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miftah.pangkatnostra.MainActivity">


    <EditText
        android:id="@+id/nilai1"
        android:inputType="number"
        android:text="2"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="^"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nilai2"
        android:inputType="number"
        android:text="20"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Hitung"
        android:id="@+id/hitung"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/hitung"
        android:layout_alignParentStart="true">

        <TextView
            android:hint="Hasil pangkat"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/pangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Hasil Jumlah"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
